<div class="row border-4">
    <h3>Aula: {{nom}}</h3>
    <table class="table border table-bordered">
        <thead>
            <tr>
            <th scope="col">Nombre del usuario</th>
            <th scope="col">Carrera</th>
            <th scope="col">Cargo</th>
            <th scope="col">Cuil</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each ocupante}}
            <tr>
                <th scope="row">{{nombre}}</th>
                <td>{{carrera}}</td>
                <td>{{cargo}}</td>
                <td>{{cuil}}</td>
                <td>
                    <a href="/estadoAula/realizarCambio/{{idocupante}}" class="btn btn-light"><i class="fa-solid fa-check"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table> 
</div>